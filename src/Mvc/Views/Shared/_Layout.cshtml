<!DOCTYPE html>
<html lang="en" ng-app="gsApp">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>Green Shelter @ViewBag.Title</title>

	<!-- TODO: CREATE BUNDLE -->
    <!-- Bootstrap core CSS -->
    <link href="/Content/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body ng-controller="AppController">
	@Html.AntiForgeryToken()
    <!-- Static navbar -->
    <nav class="navbar navbar-inverse navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" ng-model="routes" href="#">Green Shelter</a>
        </div>
		
		<!--begin .nav-collapse -->
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a ng-model="routes" href="#/spa">Home</a></li>
            <li class="dropdown">
              <a ng-model="routes" href="#/about" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">About <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a ng-model="routes" href="#/about/mission">Mission &amp; History</a></li>
                <li><a ng-model="routes" href="#/about/board">Board of Directors</a></li>
                <li><a ng-model="routes" href="#/about/employment">Employment</a></li>
                <li><a ng-model="routes" href="#/about/faqs">FAQ's</a></li>
              </ul>
            </li>
			<li class="dropdown">
              <a ng-model="routes" href="#/services" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Our Services<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a ng-model="routes" href="#/services/family">Family Services</a></li>
                <li><a ng-model="routes" href="#/services/housing">Housing</a></li>
                <li><a ng-model="routes" href="#/services/emergency/care">Emergency Care</a></li>
              </ul>
            </li>

            <li><a ng-model="routes" href="#/contact">Contact</a></li>
          </ul>
		  		  
		  <a class="btn btn-default btn-sm navbar-right" ng-hide="user.authenticated" ng-model="routes" href="#/client/register" role="button">
			<span class="glyphicon glyphicon-register" aria-hidden="true"></span> Register
		  </a>		
		  
		  <a class="btn btn-default btn-sm navbar-right" ng-hide="user.authenticated" ng-model="routes" href="#/client/login" role="button">
			<span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login
		  </a>		
		  
		  <a class="btn btn-default btn-sm navbar-right" ng-show="user.authenticated" ng-model="routes" href="#/client/profile" role="button">
			<span class="glyphicon glyphicon-user" aria-hidden="true"></span> Login
		  </a>
		  
		  <a class="btn btn-default btn-sm navbar-right" ng-show="user.authenticated" ng-model="routes" href="#/client/logout" role="button">
			<span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Logout
		  </a>		
		  
        </div>
		<!--/.nav-collapse -->
      </div>
    </nav>

	<!-- Main Container -->
	<main class="container">

      @RenderBody()
      
    </main> 
	
	<footer>
		<p>&copy; @DateTime.Now.Year - Green Shelter</p>
	</footer>

	<!-- Main Container -->


	<!-- TODO: CREATE BUNDLE -->
    <!-- Bootstrap core JavaScript -->
    <!-- ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/Scripts/jquery.js"></script>
	<script src="/Scripts/jquery.validate.js"></script>
	<script src="/Scripts/bootstrap.js"></script>
    	
	<!-- Angular core JavaScript -->
	<script language="javascript" src="/Scripts/angular.js"></script>
	<script lnaguage="javascript" src="/Scripts/angular-resource.js"></script>
	<script lnaguage="javascript" src="/Scripts/angular-route.js"></script>
	<script lnaguage="javascript" src="/Scripts/angular-local-storage.js"></script>
	<script lnaguage="javascript" src="/Scripts/gs-base.js"></script>
	<script lnaguage="javascript" src="/Scripts/gs-angular-app.js"></script>
	<script lnaguage="javascript" src="/Scripts/gs-angular-controllers.js"></script>
	<script lnaguage="javascript" src="/Scripts/gs-angular-services.js"></script>
  </body>
</html>
