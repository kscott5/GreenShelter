{
	"Data": {
		"DefaultConnectionString": {
			"ConnectionString": "Data Source=./development.db"
		}
	},
	"Logging": {
		"IncludeScopes": false,
		"LogLevel": {
			"Default": "Debug",
			"System": "Debug",
			"Microsoft": "Debug",
			"PCSC.GreenShelter": "Debug"
		}
	},
    /* Session Options */
    "SessionOptions": {
        "CookieName": ".GreenShelter.Development.Session",
        "CookiePath": "/",
        "CookieDomain": "",
        "CookieHttpOnly": "true",
        "IdleTimeout": {
            "Hours": "0",
            "Minutes": "30",
            "Seconds": "0"
        }
    }
}
